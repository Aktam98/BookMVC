@model myBookApp.Models.Book

    <form asp-controller="Home" method="post">  
        <div>
            <div class="form-group">
                <label align="center">Name</label>
                <div class="col">
                    <input class="form-control" type="text" name="Name" placeholder="Book Name" />
                </div>
            </div>
            <div class="flex-sm-shrink-1">
                <label align="center">Author</label>
                <div class="col">
                    <input class="form-control" type="text" name="Author" placeholder="Author Book" />
                </div>
            </div>
            <div class="form-group">
                <label align="center">Price</label>
                <div class="col">
                    <input class="form-control" id="number" type="number" name="Price" value="0" />
                </div>
            </div>       
            <button class="btn btn-primary btn-lg btn-block" type="submit" name="Save">Save</button>
        </div>
    </form>